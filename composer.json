{
	"name"       : "wp-hooks/parser",
	"description": "File scanning and hook parsing functionality from WP Parser.",
	"keywords"   : ["wordpress"],
	"homepage"   : "https://github.com/wp-hooks/parser",
	"type"       : "library",
	"license"    : "GPL-3.0-or-later",
	"authors"    : [
		{
			"name"    : "otrocodigo",
			"homepage": "https://github.com/otrocodigo",
			"role"    : "Developer"
		},
		{
			"name"    : "Ryan McCue",
			"homepage": "http://ryanmccue.info",
			"role"    : "Developer"
		},
		{
			"name"    : "Contributors",
			"homepage": "https://github.com/wp-hooks/parser/graphs/contributors"
		}
	],
	"support"    : {
		"issues": "https://github.com/wp-hooks/parser/issues"
	},
	"require"    : {
		"php"                      : ">=8.2",
		"phpdocumentor/reflection" : "~5.3"
	},
	"autoload"   : {
		"classmap": ["lib"],
		"files"   : ["lib/runner.php"]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	},
	"require-dev" : {
		"yoast/phpunit-polyfills"  : "^2.0"
	}
}
